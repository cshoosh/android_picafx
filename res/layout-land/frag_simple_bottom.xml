<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7caeaeae"
    android:orientation="vertical" >
   
    <!-- Main & Save/Cancel Layout -->
    <LinearLayout android:id="@+id/laySaveCancel" 
        android:layout_width="48dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="horizontal">
        	<ImageView android:id="@+id/txtDelete"
                android:scaleType="fitXY"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left"
                android:visibility="gone"
                android:src="@drawable/trash"/>    
            <ImageView android:id="@+id/txtSave"
                android:scaleType="fitXY"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left"
                android:src="@drawable/tick"/>
            <ImageView android:id="@+id/txtCancel"
                android:scaleType="fitXY"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:src="@drawable/undo"/> 
    </LinearLayout>
     <FrameLayout android:id="@+id/laySimpleMain"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.88">
        
    </FrameLayout>
</LinearLayout>
